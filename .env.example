# WoPay Web3支付系统环境配置示例
# 复制此文件为.env并填入实际配置值

# 服务器配置
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
SERVER_WORKERS=4

# 数据库配置
DATABASE_URL=postgres://username:password@localhost/wopay
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5

# 区块链配置
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
ETHEREUM_WS_URL=wss://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
CHAIN_ID=1
CONFIRMATION_BLOCKS=12

# 安全配置
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY_LENGTH=32
API_SECRET_LENGTH=64
TOKEN_EXPIRY_HOURS=24

# Webhook配置
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_MAX_RETRIES=5
WEBHOOK_RETRY_DELAYS=5,15,45,135,405

# 日志级别
RUST_LOG=info
